#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Branch naming convention check
BRANCH_NAME=$(git symbolic-ref --short HEAD)
BRANCH_PATTERN="^(feature|bugfix|hotfix|release|dev)/[a-z0-9-]+$"

if ! [[ $BRANCH_NAME =~ $BRANCH_PATTERN ]]; then
  echo "Error: Branch name '$BRANCH_NAME' does not follow the naming convention."
  echo "Branch names should be in the format: type/description"
  echo "Types: feature, bugfix, hotfix, release, dev"
  echo "Example: feature/user-authentication"
  exit 1
fi

echo "ğŸ” Running pre-push checks..."

# Run tests
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before pushing."
  exit 1
fi

# Build frontend
echo "ğŸ—ï¸ Building frontend..."
cd frontend && npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Frontend build failed. Please fix the build errors before pushing."
  exit 1
fi

# Build backend
echo "ğŸ—ï¸ Building backend..."
cd ../backend && npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Backend build failed. Please fix the build errors before pushing."
  exit 1
fi

echo "âœ… All checks passed! You can now push your changes." 